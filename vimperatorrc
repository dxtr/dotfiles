set! accessibility.typeaheadfind.enablesound=false

set animations=false
set editor="emacs"
set errorbells=false
set focuscontent=false
set followhints=0
set hintchars=hjklasdf
set gui=noaddons,nobookmarks,nomenu,nonavigation,tabs
